{% extends 'base.html.twig' %}

{% block title %}Carrito{% endblock %}

{% block body %}
    <main>
        <h1>Carrito</h1>

        {% set totalCarrito = 0 %}

        {% if carrito is not empty %}
            <div class="carrito">
                {% for producto in carrito %}
                    <p>{{ producto.nombre }}</p>
                    <p>{{ producto.precio }}</p>
                    <a href="/productos/{{ producto.id }}"><img src="/img/{{ producto.imagen }}"></a>
                    <div>
                        <a href="/carrito/restarCantidad/{{producto.id}}">-</a>
                        <p>{{producto.cantidad}}</p>
                        <a href="/carrito/sumarCantidad/{{producto.id}}">+</a>
                    </div>
                    <p>{{producto.precio}}</p>
                    <p>{{producto.totalPorProducto}}</p>
                    <a href="/carrito/borrar/{{producto.id}}">Borrar</a>

                    {% set totalCarrito = totalCarrito + producto.totalPorProducto %}
                {% endfor %}
            </div>
            <p>Total = {{ totalCarrito }}</p>
            <a href="/carrito/vaciar">Vaciar carrito</a>
            {% if error is defined %}
                <p>{{ error }}</p>
            {% endif %}
        {% else %}
            <p>No hay productos disponibles en el carrito.</p>
        {% endif %}
    </main>
{% endblock %}


