{% extends 'base.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}
    <main>
        <h1>Categorias</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for categoria in categorias %}
                <tr>
                    <td>{{ categoria.id }}</td>
                    <td>{{ categoria.nombre }}</td>
                    <td>{{ categoria.descripcion }}</td>
                    <td>
                        <a href="{{ path('app_categorias_show', {'id': categoria.id}) }}">Mostrar</a>
                        <a href="{{ path('app_categorias_edit', {'id': categoria.id}) }}">Editar</a>
                        {{ include('categorias/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No se han encontrado categor√≠as</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_categorias_new') }}">Crear Nueva</a>
    </main>
{% endblock %}
