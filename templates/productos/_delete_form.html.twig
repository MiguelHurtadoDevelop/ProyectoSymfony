<form method="post" action="{{ path('app_productos_delete', {'id': producto.id}) }}" onsubmit="return confirm('¿Estás seguro de borrar este producto?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producto.id) }}">
    <button style="margin-left:1.4rem;" class="btn delete">Borrar</button>
</form>
