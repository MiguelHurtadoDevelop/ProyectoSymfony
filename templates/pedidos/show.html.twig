{% extends 'base.html.twig' %}

{% block title %}Pedidos{% endblock %}

{% block body %}
    <main>
        <h1>Pedidos</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ pedido.id }}</td>
                </tr>
                <tr>
                    <th>Fecha</th>
                    <td>{{ pedido.fecha ? pedido.fecha|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Enviado</th>
                    <td>{{ pedido.enviado ? 'Enviado' : 'Pendiente' }}</td>
                </tr>
                <tr>
                    <th>Precio</th>
                    <td>{{ pedido.precio }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_pedidos_index') }}">Volver</a>

        <a href="{{ path('app_pedidos_edit', {'id': pedido.id}) }}">Editar</a>

        {{ include('pedidos/_delete_form.html.twig') }}
    </main>
{% endblock %}
